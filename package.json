{
  "name": "series-mingle",
  "type": "module",
  "version": "2.1.1",
  "main": "server/index.js",
  "license": "MIT",
  "keywords": [
    "fullstack",
    "react",
    "vite",
    "express",
    "firebase"
  ],
  "scripts": {
    "test": "vitest",
    "start": "node dist/server.js",
    "dev": "run-p dev:client dev:server",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm i && npm run generate-meta-tag && npm run build:client && npm run build:server",
    "build:client": "vite build --assetsDir=assets --base=/",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "generate-meta-tag": "node ./node_modules/react-cache-buster/dist/generate-meta-tag.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "knex": "knex --knexfile ./server/db/knexfile.js"
  },
  "config": {
    "assets_dir": "assets",
    "base": "/"
  },
  "reactSnap": {
    "source": "./dist",
    "puppeteerArgs": [
      "--enable-logging",
      "--v=1",
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eulertour/studio": "^1.0.32",
    "devextreme-react": "^23.2.6",
    "dotenv": "^16.4.5",
    "express": "^4.17.2",
    "firebase": "^10.11.1",
    "knex": "^2.5.1",
    "node-fetch": "^3.3.2",
    "react-bootstrap": "^2.10.2",
    "react-cache-buster": "^0.1.8",
    "react-google-button": "^0.8.0",
    "react-helmet": "^6.1.0",
    "react-snap": "^1.23.0",
    "sqlite3": "^5.1.6",
    "superagent": "7.1.1"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@redux-devtools/extension": "^3.2.3",
    "@tanstack/eslint-plugin-query": "^4.29.9",
    "@tanstack/react-query": "^4.29.12",
    "@tanstack/react-query-devtools": "^4.29.12",
    "@testing-library/react": "^14.0.0",
    "@types/express": "^4.17.14",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.0.11",
    "@types/react-helmet": "^6.1.11",
    "@types/superagent": "^4.1.18",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.30.1",
    "esbuild": "^0.18.19",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.11.2",
    "sass": "^1.50.1",
    "supertest": "^6.2.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}
